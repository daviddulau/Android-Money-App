<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:minWidth="5dp"
	android:minHeight="5dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="?android:attr/colorPrimary">
	<LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:weightSum="99"
		android:id="@+id/LayoutHeader">
		<Button
			android:text="@string/YearlyStats"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:visibility="invisible"
			android:layout_margin="5dp"
			android:layout_weight="33"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnYearly" />
		<Button
			android:text="@string/AddTransaction"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_weight="33"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnAddTransaction" />
		<Button
			android:text="@string/MonthlyStats"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_weight="33"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnTransactionsMenu" />
	</LinearLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
		<LinearLayout
			android:minWidth="5dp"
			android:minHeight="5dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:id="@+id/layoutTextStats">
			<TextView
				android:layout_margin="5dp"
				android:inputType="text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Year Stats"
				android:focusable="false"
				android:background="?android:attr/colorPrimary"
				android:textColor="?android:attr/colorPrimaryDark"
				android:id="@+id/txtYearStats"/>
			<TextView
				android:layout_margin="5dp"
				android:inputType="text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ratio:"
				android:focusable="false"
				android:background="?android:attr/colorPrimary"
				android:textColor="?android:attr/colorPrimaryDark"
				android:id="@+id/txtRatio" />
			<LinearLayout
				android:minWidth="5dp"
				android:minHeight="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:focusable="false"
				android:layout_margin="5dp"
				android:background="?android:attr/colorPrimary">
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Income:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtIncome"
					android:layout_toRightOf="@id/txtProfit" />
				<View
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="100"/>
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Expense:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtExpense" />
			</LinearLayout>
			<LinearLayout
				android:minWidth="5dp"
				android:minHeight="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:orientation="horizontal">
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Profit:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtProfit" />
				<View
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="100"/>
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Charity:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtZec" />
			</LinearLayout>
			<LinearLayout
				android:minWidth="5dp"
				android:minHeight="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:orientation="horizontal">
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Total Days:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtTotalDays" />
				<View
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="100"/>
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Left Charity:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtLeftZec" />
			</LinearLayout>
			<TextView
				android:inputType="text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Monthly Stats"
				android:focusable="false"
				android:layout_margin="5dp"
				android:background="?android:attr/colorPrimary"
				android:textColor="?android:attr/colorPrimaryDark"
				android:id="@+id/txtMonthStats" />
			<LinearLayout
				android:minWidth="5dp"
				android:minHeight="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:orientation="horizontal">
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Income: "
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtYearlyMonthlyIncome" />
				<View
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="100"/>
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Expense:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtYearlyMonthlyExpense" />
			</LinearLayout>
			<TextView
				android:inputType="text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Daily Stats"
				android:focusable="false"
				android:layout_margin="5dp"
				android:background="?android:attr/colorPrimary"
				android:textColor="?android:attr/colorPrimaryDark"
				android:id="@+id/txtDailyStats" />
			<LinearLayout
				android:minWidth="5dp"
				android:minHeight="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:orientation="horizontal">
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Income: "
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtDailyIncome" />
				<View
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="100"/>
				<TextView
					android:inputType="text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Expense:"
					android:focusable="false"
					android:background="?android:attr/colorPrimary"
					android:textColor="?android:attr/colorPrimaryDark"
					android:id="@+id/txtDailyExpense" />
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>