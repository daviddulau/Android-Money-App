<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="?android:attr/colorPrimary">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Button
			android:text="Filter"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_centerVertical="true"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnConsumFilter"/>
		<Button
			android:text="Clear Filter"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_centerVertical="true"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:visibility="invisible"
			android:id="@+id/btnConsumClearFilter"/>
		<Button
			android:text="Sort"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_centerVertical="true"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnConsumSort"/>
	</LinearLayout>
	<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Filters: "
		android:layout_margin="5dp"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/txtCarConsumptionFilters"/>
	</LinearLayout>
	<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Sorts: "
		android:layout_margin="5dp"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/txtCarConsumptionSorts"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Total Liter: "
			android:layout_margin="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtTotalLiters"/>
		<View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
			android:layout_weight="99"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Total Kilometers Ran: "
			android:layout_margin="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtTotalKilometersRan"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Medium Consumption: "
			android:layout_margin="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtMediumConsumption"/>
		<View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
			android:layout_weight="99"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Since: "
			android:layout_margin="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtSince"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Price: "
			android:layout_margin="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtMediumPricePerLiter"/>
		<View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
			android:layout_weight="99"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Price: "
			android:layout_margin="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtMediumPricePerKilometer"/>
	</LinearLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:text="No Data To Display"
			android:focusable="false"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/tvwTransactionsNoData"/>
		<GridView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/grdCarConsumption"/>
	</RelativeLayout>
</LinearLayout>
