<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:background="?android:attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<TextView
        android:text="Title"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="20dp"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtviewNoteSettingsTitle"/>
    <EditText
        android:text="Title"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtNoteSettingsTitle"/>
	<TextView
        android:text="Description"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="20dp"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtviewNoteSettingsDescription"/>
    <EditText
        android:text="Description"
        android:inputType="textMultiLine"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtNoteSettingsDescription"/>
	<Button
		android:text="Save"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:background="@drawable/DefinedButton"
		android:textColor="?android:attr/colorPrimary"
		android:id="@+id/btnChangeNoteSettings"/>
	<TextView
        android:text="Last Modified:"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_margin="5dp"
		android:textAlignment="center"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtNoteSettingsLastModified"/>
	<TextView
        android:text="Date Created:"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_margin="5dp"
		android:textAlignment="center"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtNoteSettingsCreatedDate"/>
	<CheckBox
        android:text="Note Has Total Sum"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:textAlignment="center"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/chkHasTotal"/>
	<CheckBox
        android:text="Activate Mini Notes"
        android:inputType="text"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:textAlignment="center"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/chkHasMiniNotes"/>
	<TextView
        android:text="Total Goal Sum"
        android:inputType="number"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:textAlignment="center"
		android:visibility="invisible"
		android:background="?android:attr/colorPrimary"
		android:textColor="?android:attr/colorPrimaryDark"
        android:id="@+id/txtviewNoteSettingsGoalSum"/>
	<EditText
		android:id="@+id/txtNoteSettingsGoalTotal"
		android:text="Total:"
		android:inputType="numberDecimal"
		android:textColor="?android:attr/colorPrimaryDark"
		android:textAlignment="center"
		android:layout_width="match_parent"
		android:visibility="invisible"
		android:layout_height="50dp"/>
</LinearLayout>