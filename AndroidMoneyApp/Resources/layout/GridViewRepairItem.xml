<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="100"
	android:background="?android:attr/colorPrimary"
    android:id="@+id/LayoutClickableRepair">
    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="6.5pt"
        android:textColor="?android:attr/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:minHeight="50px"
        android:minWidth="25px"
        android:layout_weight="10"
        android:id="@+id/txtGridRepairID" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="20px"
        android:minHeight="20px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:weightSum="100"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="250px"
            android:layout_weight="50"
            android:id="@+id/txtGridRepairName" />
        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="250px"
            android:layout_weight="50"
            android:id="@+id/txtGridRepairDate" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="20px"
        android:minHeight="20px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:weightSum="100"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Kilometers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="250px"
            android:layout_weight="50"
            android:id="@+id/txtGridRepairKilometers" />
        <TextView
            android:text="Sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="250px"
            android:layout_weight="50"
            android:id="@+id/txtGridRepairSum" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="20px"
        android:minHeight="20px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:id="@+id/linearLayout3">
        <ImageView
            android:clickable="true"
		    android:src="@drawable/modify"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ImageButton"
		    android:id="@+id/imgModifyCarRepair" />
        <ImageView
            android:clickable="true"
		    android:src="@drawable/remove"
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/RemoveButton"
		    android:id="@+id/imgRemoveCarRepair" />
    </LinearLayout>
</LinearLayout>