<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="100"
	android:background="?android:attr/colorPrimary"
    android:id="@+id/LayoutClickableTag">
    <TextView
        android:layout_weight="10"
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="6.5pt"
        android:textColor="?android:attr/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:minHeight="50px"
        android:minWidth="40px"
        android:id="@+id/txtGridTagItemID" />
    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="6.5pt"
        android:textColor="?android:attr/colorPrimaryDark"
        android:gravity="center"
        android:layout_weight="60"
        android:minHeight="50px"
        android:minWidth="400px"
        android:id="@+id/txtGridTagItemName" />
    <ImageView
        android:clickable="true"
		android:src="@drawable/modify"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ImageButton"
		android:id="@+id/imgModifyTag" />
    <ImageView
        android:clickable="true"
		android:src="@drawable/remove"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/RemoveButton"
		android:id="@+id/imgRemoveTag" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:textColor="?android:attr/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/chkGridTagsSelectionCheck" />
</LinearLayout>