<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:minWidth="5dp"
	android:minHeight="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?android:attr/colorPrimary">
    <LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutStats5">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Plate"
			android:layout_marginLeft="5dp"
			android:focusable="false"
			android:layout_weight="30"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtCarPlate"/>
		<EditText
			android:minWidth="350px"
			android:inputType="textCapCharacters"
			android:maxLength="50"
			android:imeOptions="actionNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="65"
			android:text="xxxxxxxxxx"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtAddCarPlate" />
	</LinearLayout>
	<LinearLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutStats1">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Brand"
			android:layout_marginLeft="5dp"
			android:focusable="false"
			android:layout_weight="30"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtCarBrand"/>
		<EditText
			android:minWidth="350px"
			android:inputType="textCapWords"
			android:maxLength="50"
			android:imeOptions="actionNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="65"
			android:text="xxxxxxxxxx"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtAddCarBrand" />
	</LinearLayout>
	<LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutStats2">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Model"
			android:layout_marginLeft="5dp"
			android:focusable="false"
			android:layout_weight="30"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtCarModel"/>
		<EditText
			android:minWidth="350px"
			android:inputType="textCapWords"
			android:maxLength="50"
			android:imeOptions="actionNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="65"
			android:text="xxxxxxxxxx"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtAddCarModel" />
	</LinearLayout>
	<LinearLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutStats3">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Year"
			android:layout_marginLeft="5dp"
			android:focusable="false"
			android:layout_weight="30"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtCarYear"/>
		<EditText
			android:minWidth="350px"
			android:inputType="number"
			android:maxLength="4"
			android:imeOptions="actionNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="65"
			android:text="xxxxxxxxxx"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtAddCarYear" />
	</LinearLayout>
	<Button
		android:text="Add New Car"
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:layout_gravity="center"
		android:layout_margin="5dp"
		android:background="@drawable/DefinedButton"
		android:textColor="?android:attr/colorPrimary"
		android:id="@+id/btnAddOrModifyCarProperties" />
</LinearLayout>
