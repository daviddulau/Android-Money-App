<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?android:attr/colorPrimary">
	<TextView
		android:text="Tag Name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="textCapCharacters"
		android:layout_margin="5dp"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/textviewTagName" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="textCapCharacters"
		android:layout_margin="5dp"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/txtTagName" />
	<LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:weightSum="100"
		android:orientation="horizontal">
		<Button
			android:text="Set Tag Color"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_weight="30"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnSetTagColor" />
		<TextView
			android:text="Tag Color"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textAlignment="center"
			android:layout_margin="5dp"
			android:layout_weight="70"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtTagColor" />
	</LinearLayout>
	<TextView
		android:text="This Tag Belongs To Notes:"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:layout_margin="5dp"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/textviewChoosenNoteToAdd" />
    <LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutAddToNotes">
		<Button
			android:text="Add Note"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_weight="30"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnAddNoteToTag" />
		<TextView
			android:text="Note123"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textAlignment="center"
			android:layout_margin="5dp"
			android:layout_weight="70"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtChoosenNotesToTag" />
	</LinearLayout>
	<TextView
		android:text="This Tag Belongs To Cars:"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:layout_margin="5dp"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/textviewTagBelongsToCars" />
    <LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutAddToCars">
		<Button
			android:text="Add Car"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:layout_weight="30"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnAddCarToTag" />
		<TextView
			android:text="Car123"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textAlignment="center"
			android:layout_margin="5dp"
			android:layout_weight="70"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtChoosenCarsToTag" />
	</LinearLayout>
	<Button
		android:text="Modify"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:layout_margin="5dp"
		android:background="@drawable/DefinedButton"
		android:textColor="?android:attr/colorPrimary"
		android:id="@+id/btnAddOrModifyTag" />
</LinearLayout>
