<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:minWidth="25px"
	android:minHeight="25px"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?android:attr/colorPrimary">
	<LinearLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:orientation="horizontal"
		android:weightSum="100"
		android:id="@+id/LayoutStats1">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Account Name"
			android:layout_marginLeft="5dp"
			android:focusable="false"
			android:layout_weight="30"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/textviewAccountName"/>
		<EditText
			android:minWidth="350px"
			android:inputType="textCapCharacters"
			android:maxLength="15"
			android:imeOptions="actionNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="65"
			android:text="xxxxxxxxxx"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtAccountName" />
	</LinearLayout>
	<Button
		android:text="Add New Account"
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:layout_gravity="center"
		android:layout_margin="5dp"
		android:background="@drawable/DefinedButton"
		android:textColor="?android:attr/colorPrimary"
		android:id="@+id/btnAddOrModifyAccount" />
</LinearLayout>