<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:minWidth="5dp"
	android:minHeight="5dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?android:attr/colorPrimary"
	android:id="@+id/Layout1">
	<LinearLayout
		android:minWidth="5dp"
		android:minHeight="5dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:id="@+id/LayoutChangeZec">
		<TextView
			android:text="Enter The New Percentage For Charity"
			android:layout_height="30dp"
			android:layout_width="match_parent"
			android:layout_marginTop="5dp"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtNewZecLabel"/>
		<EditText
			android:inputType="number"
			android:layout_height="50dp"
			android:layout_width="match_parent"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtNewZec"/>
		<TextView
			android:text="Enter The Period To Change"
			android:layout_height="30dp"
			android:layout_width="match_parent"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimaryDark"
			android:id="@+id/txtSpinnerLabel"/>
		<Spinner
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_margin="5dp"
			android:layout_gravity="center"
			android:background="?android:attr/colorPrimary"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/spinnerZecPeriodChangeChooser" />
		<Button
			android:text="Change Charity Percentage"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:background="@drawable/DefinedButton"
			android:textColor="?android:attr/colorPrimary"
			android:id="@+id/btnNewZecAdd" />
		<GridView
			android:minWidth="5dp"
			android:minHeight="5dp"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:id="@+id/grdYearZecPercentage" />
	</LinearLayout>
</LinearLayout>