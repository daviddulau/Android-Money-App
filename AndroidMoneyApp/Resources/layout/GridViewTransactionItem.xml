
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="100"
	android:background="?android:attr/colorPrimary"
    android:id="@+id/LayoutClickableTransaction">
    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="6.5pt"
        android:visibility="invisible"
        android:textColor="?android:attr/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:minHeight="50px"
        android:minWidth="25px"
        android:layout_weight="0"
        android:id="@+id/txtGridTransactionItemID" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="20px"
        android:minHeight="20px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:weightSum="100"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="200px"
            android:layout_weight="50"
            android:id="@+id/txtGridTransactionItemSum" />
        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="200px"
            android:layout_weight="50"
            android:id="@+id/txtGridTransactionItemDate" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="20px"
        android:minHeight="20px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:weightSum="100"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:textColor="?android:attr/colorPrimaryDark"
            android:gravity="center"
            android:minHeight="20px"
            android:minWidth="300px"
            android:layout_weight="50"
            android:id="@+id/txtGridTransactionItemNameOrTag" />
        <TextView
            android:text="Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="6.5pt"
            android:gravity="center"
            android:textColor="?android:attr/colorPrimaryDark"
            android:minHeight="20px"
            android:minWidth="300px"
            android:layout_weight="50"
            android:id="@+id/txtGridTransactionItemCategory" />
    </LinearLayout>
    <LinearLayout
        android:minWidth="50dp"
        android:orientation="horizontal"
        android:minHeight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:id="@+id/LayoutRemoveTransaction">
	    <ImageView
            android:clickable="true"
		    android:src="@drawable/modify"
		    android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@drawable/ImageButton"
		    android:id="@+id/imgModifyTransaction" />
        <ImageView
            android:clickable="true"
		    android:src="@drawable/copy"
		    android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@drawable/ImageButton"
		    android:id="@+id/imgCopyTransaction" />
        <CheckBox
            android:text=""
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
	        android:id="@+id/chkRemoveTransaction" />
    </LinearLayout>
</LinearLayout>