<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?android:attr/colorPrimary">
	<TextView
		android:text="****"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:textAlignment="center"
		android:textSize="100px"
		android:maxLength="4"
		android:autoSizeMinTextSize="20pt"
		android:inputType="numberPassword"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:textColor="?android:attr/colorPrimaryDark"
		android:id="@+id/txtShowPIN" />
	<RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
		 android:layout_alignParentBottom="true">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?android:attr/colorPrimary">
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:weightSum="100"
				android:layout_height="110dp"
				android:layout_margin="10dp">
				<Button
					android:text="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric1" />
				<Button
					android:text="2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric2" />
				<Button
					android:text="3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric3" />
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:weightSum="100"
				android:layout_height="110dp"
				android:layout_margin="10dp">
				<Button
					android:text="4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric4" />
				<Button
					android:text="5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric5" />
				<Button
					android:text="6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric6" />
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:weightSum="100"
				android:layout_height="110dp"
				android:layout_margin="10dp">
				<Button
					android:text="7"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric7" />
				<Button
					android:text="8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric8" />
				<Button
					android:text="9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric9" />
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:weightSum="100"
				android:layout_height="110dp"
				android:layout_margin="10dp">
				<ImageView
					android:layout_width="100px"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:src="@drawable/remove"
					android:visibility="invisible"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumericRemove" />
				<Button
					android:text="0"
					android:layout_width="100px"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_gravity="center_vertical"
					android:layout_weight="33"
					android:textSize="10pt"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumeric0" />
				<ImageView
					android:text=""
					android:layout_width="100px"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="33"
					android:textSize="10pt"
					android:visibility="invisible"
					android:src="@drawable/removeone"
					android:background="@drawable/RoundButton"
					android:textColor="?android:attr/colorPrimary"
					android:id="@+id/btnNumericRemoveOne" />
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
